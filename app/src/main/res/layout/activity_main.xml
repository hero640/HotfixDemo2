<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yihua99.hotfixdemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_hello"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="@string/hello_world2"/>

        <TextView
            android:id="@+id/tv_jnitest"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="jnitest"/>

        <TextView
            android:id="@+id/tv_channel"
            android:text="channel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center" />
        <TextView
            android:id="@+id/tv_version"
            android:text="版本号"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center" />


        <View android:layout_width="match_parent"
            android:layout_height="1px"
              android:background="#c5c5c5"
            />

        <TextView
            android:id="@+id/tv_app_info"
            android:background="#F1F1F1"
            android:text="这是batch包"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center" />

        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:background="#c5c5c5"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_set_jnitest"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="JniTest"
            android:textAllCaps="false"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            />


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="点击crash测试"
            android:textAllCaps="false"
            android:gravity="center"
            android:layout_alignParentBottom="true" />


    </LinearLayout>


</RelativeLayout>
